<!-- CSS -->

  <style>
    .background-url{
        background: url(../assets/img/bg-01.png);
        background-attachment: fixed;
    }
.section-title{
    color:#efd043;
    text-shadow: 4px 4px #0a4850;
    font-size: 5rem;
    font-weight: 700;
    padding: 2rem 2rem;
}
  
    .significance-points{
        padding: 0 8vw;
    }

    .significance-points p{
        font-size: 2.3vh;
    }
    .significance-points li{
        font-size: 2.3vh;
    }
    .significance-end{
        font-size: 2.3vh;
        padding: 0 5vw;
        text-align: left;
    }

    .body-container{
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 0 10vh;
    }

    .registration-container{
        padding: 0 10vh;
    }

    .registration-container p{
        text-align: center;
        font-size: 2.5vh;
        padding: 1vh 5vh;
    }
    button {
  margin: 20px;
}
.custom-btn {
  color: #0a4850;
  width: 130px;
  height: 40px;
  padding: 10px 25px;
  font-family: 'Lato', sans-serif;
  font-weight: 500;
  background: transparent;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  display: inline-block;
}

    .btn-15 {
  color: #ffcc00;
  border: 2px solid#000000;
  border-radius: 6px;
  box-shadow: 0 0 5px #ffcc00, 0 0 5px #ffcc00 inset;
  z-index: 1;
  
}
.btn-15:after {
  position: absolute;
  content: "";
  width: 0;
  height: 100%;
  top: 0;
  right: 0;
 z-index: -1;
  background: #ffcc00;
  box-shadow:
   0 0 20px  #ffcc00;
  transition: all 0.3s ease;
  
}
.btn-15:hover {
  color: #0a4850;
  font-weight: 600;
  transition: 2s;
}
.btn-15:hover:after {
  left: 0;
  width: 100%;
}
.btn-15:active {
  top: 2px;
}
    
    .pno-container{
        padding: 0 10vh;
    }

    .pno-container p{
        text-align: left;
        padding: 0 4vw;
        font-size: 2.4vh;
    }
    .subheading{
        font-weight: 700;
    }

    .faq-container{
        padding: 0 10vh;
    }

    .faq-container h4{
        font-size: 2.5vh;
        padding: 1vh 9vh;
        font-weight: 700;
    }

    .faq-container p{
        font-size: 2.4vh;
        padding: 1vh 9vh;
        /* border-bottom: 1px solid rgb(116, 106, 106,0.4); */
    }

    .faq-container p span{
        font-weight: 700;
    }


    .coreteam-container{
        padding: 0 10vh;
    }

    .coreteam-container h1{
        color: rgb(2, 2, 110);
        font-size: 7.2vh;
        /* font-family: 'Roboto Slab', serif !important; */
        padding: 3vh 5vw;
        text-align: center;
        font-weight: 700;
    }
    
    .coreteam-container h1 svg{
        display: inline;
    }
    .coreteam-container h1:hover{
        color: blue;
    }
    .coreteam-container p{
        text-align: center;
        font-size: 2.5vh;
    }

    .email{
        text-align: center;
        font-size: 2.5vh;
        padding: 1vh 0;
        font-weight: 500;
    }
    .email a{
        text-decoration: none;
        color: rgb(31, 104, 128);
    }

    .email a:hover{
        color: blue;
        text-decoration: underline;
    }

    .email svg{
        display: inline;
        margin: 0 1vh
    }

    .contact-us{
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        padding: 2vh 1vw;
        flex-wrap: wrap
    }
    
    .teach{
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        border: 1px solid rgb(206, 201, 201);
        padding: 1vh 2vw;
        border-radius: 11px;
        margin: 1vh;
        width: 45%;
    }
    .teach h4{
        margin-bottom: 3vh;
        /* font-family: 'Roboto Slab', serif !important; */
        font-weight: bolder;
        font-size: 2.5vh;
        text-align: center;
    }
    .teach p{
        font-size: 2.4vh;
        font-weight: 600;
    }
    @media screen and (max-width: 800px) {
        .intro, .coreteam-container h1{
            font-size: 5vh;
            text-align: center;
        }
        .welcome-heading{
            font-size: 3.5vh;
        }
        .contact-us{
            flex-direction: column;
        }
        .teach{
            width: 100%;
        }
        .teach h4{
            text-align: center;
        }

        .faq-container h4{
            font-size: 2.2vh;
            padding: 1vh 5vw;
        }

        .faq-container p{
            font-size: 2.2vh;
            padding: 0 5vw;
        }

        .faq-container p span{
            font-weight: 700;
        }

        .faq-container, .pno-container, .body-container, .registration-container, .main-container{
            padding: 0 5vw;
        }
    }

  </style>

